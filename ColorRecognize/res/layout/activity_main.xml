<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.sakuramochi702.colorrecognize.MainActivity" >

    <ImageView
        android:id="@+id/imgTitle3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_centerVertical="true"
        android:src="@drawable/star_yellow" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgTitle1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="SHAPE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imgTitle3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_corners"
        android:onClick="btnStartOnClick"
        android:text="START"
        android:textColor="#fcfcfc" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnStart"
        android:layout_below="@+id/btnStart"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_corners_help"
        android:onClick="btnHelpOnClick"
        android:text="HOW TO PLAY"
        android:textColor="#fcfcfc" />

    <Button
        android:id="@+id/btnHs"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnHelp"
        android:layout_below="@+id/btnHelp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_corners_hs"
        android:onClick="btnHardModeOnClick"
        android:text="HARD MODE"
        android:textColor="#fcfcfc" />

    <ImageView
        android:id="@+id/imgTitle4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/btnStart"
        android:layout_alignRight="@+id/tvTitle"
        android:src="@drawable/heart_purple" />

    <ImageView
        android:id="@+id/imgTitle2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/imgTitle4"
        android:layout_alignLeft="@+id/imgTitle4"
        android:layout_marginBottom="16dp"
        android:src="@drawable/moon_blue" />

    <ImageView
        android:id="@+id/imgTitle1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/imgTitle3"
        android:layout_alignTop="@+id/imgTitle2"
        android:src="@drawable/circle_red" />

    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="00000"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tbLblHs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvHighScore"
        android:layout_alignBottom="@+id/tvHighScore"
        android:layout_toLeftOf="@+id/tvHighScore"
        android:text="BEST:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
